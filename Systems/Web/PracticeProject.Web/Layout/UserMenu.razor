@using PracticeProject.Web.Pages.Auth.Services

@inject IAuthService AuthService
@code {
    string userName = string.Empty;
    protected override async Task OnInitializedAsync()
    {
        userName = await AuthService.GetUserName();
    }
}

<MudMenu Color="Color.Inherit" Icon="@Icons.Material.Filled.Face" AnchorOrigin="Origin.BottomRight" >
    <MudMenuItem>@userName</MudMenuItem>
    <MudMenuItem Link="/logout">Logout</MudMenuItem>
</MudMenu>
    <MudNavLink Href="/myrequest" Match="NavLinkMatch.Prefix" Class="centered-content">My request to view</MudNavLink>

    <MudNavLink Href="/viewcar" Match="NavLinkMatch.Prefix" Class="centered-content">Viewing car</MudNavLink>

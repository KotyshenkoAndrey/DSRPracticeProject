    .centered-content {
        text-align: center;
    }
</style>

<PageTitle>Home</PageTitle>

<div class="centered-content">
    <h1>Car sales</h1>

    <MudNavLink Href="/mycar" Match="NavLinkMatch.Prefix" Class="centered-content">My car</MudNavLink>

